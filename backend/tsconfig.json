{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["ES2020"],
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "types",
            "./node_modules/@types"
        ]
    },
    "exclude": ["node_modules"]    
}