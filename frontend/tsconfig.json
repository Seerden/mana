{
    "compilerOptions": {
        "target": "es2020",
        
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2017.object"
        ],
        "allowJs": true,
        "baseUrl": "src",
        "checkJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "noImplicitAny": false,
        "typeRoots": [
            "index.d.ts",
            "node_modules/@types"
        ],
        "types": ["jest", "node"],
    },
    "include": [
        "src",
        "index.d.ts"
    ],
}